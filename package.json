{
    "name": "GlitterGutter",
    "displayName": "Column Number in Gutter",
    "description": "Shows the current cursor column number in the gutter next to the line number.",
    "version": "0.0.2",
    "license": "WTF",
    "engines": {
        "vscode": "^1.70.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onStartupFinished"
    ],
    "main": "./extension.js",
    "contributes": {
        "configuration": {
            "title": "GlitterGutter",
            "properties": {
                "glitterGutter.labelColor": {
                    "type": "string",
                    "default": "#888F99",
                    "description": "Foreground color of the gutter label (line-column)."
                },
                "glitterGutter.labelBackground": {
                    "type": "string",
                    "default": "#0F0F0F",
                    "description": "Background color of the gutter label (line-column)."
                }
            }
        }
    },
    "scripts": {
        "package": "vsce package"
    },
    "devDependencies": {
        "esbuild": "^0.27.1",
        "vsce": "^2.15.0"
    },
  "repository": {
        "type": "git",
        "url": "https://github.com/KooAmon/GlitterGutter.git"
    }
}